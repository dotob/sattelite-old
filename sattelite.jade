head
  title sattelite
  meta(http-equiv="Content-type" content="text/html; charset=utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  link(rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css")

body
  +loginButtons

template(name="takeaways")
  .pure-g
    .pure-u-1-2
      h2 So you want to start a foodrun?
      h4.subheader Great! go ahead and choose a takeaway you want to order food with:
      +each takeaways
        +takeawaysListItem
    .pure-u-1-2
      +unless currentUser
        h3 log in to start a food run.
      +if foodruns.count
        h2 But wait... There are allready foodruns!
        h4.subheader So spare the hassle and just take part in one. Hmmmm, yum yum!
        +each foodruns
          hr
          .pure-u-1-2
            h3 #{takeaway.name}
            p #{takeaway.description}
            p organized by: #{organizer.username}
          .pure-u-1-2
            a(href="#{pathFor 'foodrun'}") Show foodrun

template(name="takeawaysListItem")
  hr
  .pure-g
    .pure-u-2-3
      h3 #{name}
      p #{description}
    .pure-u-1-3
      a(href="#{pathFor 'takeaway'}") Show takeaway
      +if currentUser
        a.startFoodrun(href="#") Start foodrun

template(name="takeaway")
  .takeaway
    +with takeaway
      h2 #{name}
      p #{description}
      p #{phone}

template(name="foodrun")
  .foodrun
    +with foodrun
      +if bespokenDishes
        h2 Those are the dishes already bespoken:
        +each bespokenDishes
          h3 #{name}
          h4 bespoken by: #{bespokenBy.username}
      h2 This foodrun goes to: #{takeaway.name}
      p This is the menu.
      +each takeaway.dishes
        +dishesListItem

template(name="dishesListItem")
  h3 #{name}
  +if currentUser
    a.bespeakDish(href="#") bespeak dish

